// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/lib",
    "rootDir": "./src",
    "typeRoots": [
      "../../node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["src/**/*.test.ts", "**/node_modules"]
}